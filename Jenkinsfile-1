pipeline {
    agent any
    stages {
        stage('Build') {
            agent {
                docker {
                    image 'cosmicnode/node-tester:v2'
                    // Run the container on the node specified at the top-level of the Pipeline, in the same workspace, rather than on a new node entirely:
                    reuseNode true
                }
            }
            steps {
                sh 'python3 --version'
                sh 'python jenkins-slave-tester1/docker_multi_build/common/runner.py'
            }
        }
    }
}